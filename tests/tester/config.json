{
    "workers": 0,
    "http": {
        "servers": [
            {
                "root": "./tests/tester/YoupiBanane",
                "listen": [
                    "127.0.0.1:1234"
                ],
                "locations": {
                    "^/$": {
                        "allowed_methods": ["GET"],
                        "autoindex": true
                    },
                    "^/put_test/?": {
                        "allowed_methods": ["PUT"]
                    },
                    ".+\\.bla$": {
                        "final": true,
                        "cgi": "./cgi-tester"
                    },
                    "^/post_body/?": {
                        "allowed_methods": ["POST"],
                        "max_body": 100
                    },
                    "^/directory/?": {
                        "index": [ "youpi.bad_extension" ]
                    }
                }
            }
        ]
    }
}