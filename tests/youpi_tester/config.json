{
    "workers": 0,
    "http": {
        "error-pages": {
            "404": "../html/index.html"
        },
        "servers": [
            {
                "body-limit": 1000000000,
                "buffer-limit": 1000000000,
                "timeout": 40000000,
                "root": ".",
                "listen": [
                    "127.0.0.1:1234"
                ],
                "locations": {
                    "^//?$": {
                        "root": "./YoupiBanane/index.html",
                        "allowed-methods": [
                            "GET"
                        ]
                    },
                    "^/put_test/?": {
                        "allowed-methods": [
                            "PUT"
                        ],
                        "upload": {
                            "directory": "./output"
                        }
                    },
                    "^/post_body/?": {
                        "root": "./YoupiBanane/index.html",
                        "allowed-methods": [
                            "POST"
                        ],
                        "body-limit": 100
                    },
                    "^/directory/?": {
                        "root": "./YoupiBanane",
                        "index": [
                            "youpi.bad_extension"
                        ],
                        "locations": {
                            "\\.bla$": {
                                "root": "./ubuntu_cgi_tester",
                                "allowed-methods": [
                                    "GET",
                                    "POST"
                                ],
                                "final": false,
                                "cgi": true
                            }
                        }
                    }
                }
            }
        ]
    }
}